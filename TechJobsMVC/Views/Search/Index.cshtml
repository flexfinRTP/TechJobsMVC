<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form asp-action="Results">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
    }
        <h1>@ViewBag.title</h1>

            @foreach (var category in ViewBag.jobs)
            {
                <table class="job-listing">
                    <tr>
                        <th>ID: </th>
                        <td>@category.Id</td>
                    </tr>
                    <tr>
                        <th>Name: </th>
                        <td>@category.Name</td>
                    </tr>
                    <tr>
                        <th>Employer: </th>
                        <td>@category.Employer</td>
                    </tr>
                    <tr>
                        <th>Location: </th>
                        <td>@category.Location</td>
                    </tr>
                    <tr>
                        <th>Position Type: </th>
                        <td>@category.PositionType</td>
                    </tr>
                    <tr>
                        <th>Skill: </th>
                        <td>@category.CoreCompetency</td>
                    </tr>
                </table>
            }
            <br /><br />
</div>